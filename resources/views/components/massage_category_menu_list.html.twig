{% if massageCategories %}
    <div class="massage-category-list container">
        <div class="row">
            {% set i = 1 %}
            {% for item in massageCategories %}
                <div class="col-lg-3 col-md-6 col-sm-6"><a
                            class="item item-{{ item.slug }} {{ item.active ? ' active' }}"
                            href="{{ path(massageCategoriesRoute, {'slug': item.slug}) }}">
                        {% if item.slug in ['kids', 'spa'] %}
                            {{ item.title|replace({' ': ' <br>'})|raw }}
                        {% else %}
                            {{ item.title }}
                        {% endif %}
                        <span class="icon {{ item.slug }}"></span><span class="pointer"></span></a></div>
                {% if i%4 == 0 %}
                    <div class="clearfix"></div>
                {% endif %}
                {% set i = i + 1 %}
            {% endfor %}
        </div>
    </div>
{% endif %}